<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/view_con_tname"
                android:text="TENDER NAME"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorPink"
                android:gravity="center"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:layout_weight="30"/>


            <TextView
                android:id="@+id/show_con_tname"
                android:textColor="@color/colorPink"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_blue">

            <TextView
                android:id="@+id/view_con_expiryD"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:text="EXPIRE ON"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_blue"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:id="@+id/show_con_expiryD"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/view_con_proID"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:text="PROJECT ID"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/show_con_proID"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/view_con_cname"
                android:text="COMPANY NAME"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorPink"
                android:gravity="center"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:layout_weight="30"/>


            <TextView
                android:id="@+id/show_con_cname"
                android:textColor="@color/colorPink"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_blue">

            <TextView
                android:id="@+id/view_con_cnumber"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:text="CONTACT NUMBER"
                android:textSize="8sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_blue"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:id="@+id/show_con_cnumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/edit_text_blue"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/view_con_refno"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:text="REF. NO."
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/show_con_refno"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_blue">

            <TextView
                android:id="@+id/view_con_cprice"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:text="CONTRACT PRICE"
                android:textSize="8sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_blue"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:id="@+id/show_con_cprice"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/view_con_ctype"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:text="TYPE"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/show_con_ctype"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_blue">

            <TextView
                android:id="@+id/view_con_startD"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:text="START DATE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_blue"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:id="@+id/show_con_startD"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/view_con_endD"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent"
                android:text="END DATE"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/show_con_endD"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/edit_text_blue"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>